<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#f26f03">

        <Button
            android:id="@+id/mBtn_back_seek"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:background="@mipmap/mm_title_back" />

        <LinearLayout
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:layout_centerInParent="true"
            android:background="#fa3104"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/mEdit_SP_seek"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#fa3104"
                android:gravity="center"
                android:layout_gravity="center"
                android:hint="搜索商品"
                android:textColorHint="#cccccc" />
        </LinearLayout>

        <Button
            android:id="@+id/mBtn_seek_seek"
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@mipmap/shared_searchbuttom_normal" />

    </RelativeLayout>

    <us.mifeng.view.PullToRefreshScrollView
        android:id="@+id/mSC_seek"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>