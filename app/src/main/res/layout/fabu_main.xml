<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:orientation="vertical"
    android:background="#FFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_weight="1">
            <ImageButton
                android:id="@+id/iv1"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:scaleType="fitXY"
                android:background="@mipmap/tianjiazhaopian"
                />
            <ImageButton
                android:id="@+id/iv2"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:scaleType="fitXY"
                android:background="@mipmap/tianjiazhaopian"
                android:layout_width="100dp"
                android:layout_height="100dp"
                />
            <ImageButton
                android:id="@+id/iv3"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@mipmap/tianjiazhaopian"
                android:scaleType="fitXY"
                android:layout_width="100dp"
                android:layout_height="100dp"
                />
            </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="(友情提示：上传照片数量应不多于3张)"
            android:textSize="16sp"
            android:layout_marginLeft="16dp"
            android:textColor="#0F0"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            >

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="宝贝名称:"
                android:textSize="16sp"
                android:layout_margin="12dp"
                android:layout_gravity="center"
                android:textColor="#000"/>

            <EditText
                android:id="@+id/et_title"
                android:layout_width="260dp"
                android:layout_height="wrap_content"
                android:hint="请输入宝贝名称"
                android:layout_marginTop="8dp"
                android:background="@drawable/et_kuang1"
                android:textSize="16sp"
                android:textColor="#000"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="宝贝描述:"
                android:layout_gravity="center"
                android:textSize="16sp"
                android:layout_marginLeft="12dp"
                android:textColor="#000"/>

            <EditText
                android:id="@+id/et_miaoshu"
                android:layout_width="260dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:background="@drawable/et_kuang2"
                android:hint="请输入宝贝描述"
                android:textColor="#000"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="宝贝价格:"
                android:textSize="16sp"
                android:layout_marginLeft="12dp"
                android:textColor="#000"/>

            <EditText
                android:id="@+id/et_price"
                android:layout_width="260dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginLeft="12dp"
                android:background="@drawable/et_kuang3"
                android:textColor="#000"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="12dp">

            <TextView
                android:id="@+id/tv_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="手机号:"
                android:textSize="16sp"
                android:layout_marginLeft="12dp"
                android:textColor="#000"/>

            <EditText
                android:id="@+id/et_phone"
                android:layout_width="260dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:background="@null"
                android:hint="请输入手机号"
                android:textColorHint="#000"
                android:textColor="#000"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">
            <TextView
                android:id="@+id/tv_qq"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="QQ号:"
                android:textSize="16sp"
                android:layout_marginLeft="12dp"
                android:textColor="#000"
                android:textColorHint="#000"/>

            <EditText
                android:id="@+id/et_qq"
                android:layout_width="260dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="22dp"
                android:background="@null"
                android:hint="请输入qq号"
                android:textColor="#000"
                android:textColorHint="#000" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">
            <TextView
                android:id="@+id/tv_weixin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="微信号:"
                android:textSize="16sp"
                android:layout_marginLeft="12dp"
                android:textColor="#000"/>

            <EditText
                android:id="@+id/et_weixin"
                android:layout_width="260dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:background="@null"
                android:hint="请输入微信号"
                android:textColor="#000"
                android:textColorHint="#000"/>

        </LinearLayout>

        <Button
            android:id="@+id/bt_fabu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="确认发布"
            android:background="#ff4c41"
            android:layout_gravity="center"
            android:layout_marginTop="110dp"/>

    </LinearLayout>


</LinearLayout>
</ScrollView>